<h1 class="store-front"> Shop Rails! </h1>

<div>
    <%# If logged in %>
    <% if current_user%>
        <div class="categories">
            <h1 class="title"> <%= @category.title %> </h1>
            
            <ul class="list-group">
                <% @products. each do |p| %>
                    <a id="products" class="list-group-item list-group-item-action"> <h4 id="product"> <%= p.name %> </h4> <%= number_to_currency p.price%> </a>
                <% end %>
            </ul>
            <h6 class="title"> <%= link_to "Back to Categories", '/categories'%> </h6>
        </div>
    <% end %>

    <%# If not logged in %>
        <% unless current_user %>
            <h1>Please Login to View</h1>
        <% end %>
</div>