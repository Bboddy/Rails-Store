<div>
    <%# If logged in %>
    <% if current_user%>
        <div class="categories">
            <h1 class="title"> <%= @category.title %> </h1>
            
            <ul class="list-group">
                <% @products. each do |product| %>
                    <a id="products" class="list-group-item list-group-item-action"> <h4 id="product"> <%= product.name %> </h4> <%= number_to_currency product.price%> </a>

                    <%= form_tag cart_index_path do %>
                        <%= hidden_field_tag :product_id, product.id %>
                        <%= number_field_tag :quantiy, 1 %>
                        <%= submit_tag "Add to Cart" %>
                    <% end %>

                <% end %>
            </ul>
            <h6 class="backwards"> <%= link_to "Back to Categories", '/categories'%> </h6>
        </div>
    <% end %>

    <%# If not logged in %>
    <% unless current_user %>
        <h1> <%= link_to "Please Login to View", '/'%> </h1>
    <% end %>
</div>