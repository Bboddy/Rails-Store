<div>
    <%# If logged in %>
    <% if current_user%>
        <div class="categories">
            <h1>Make a Order</h1>
            <% @items. each do |i| %>
                    <a id="category" class="list-group-item list-group-item-action">
                    <h4 id="product"> 
                        <%= i.product.name %>
                        <%= "(x#{i.quanity})" %>
                        <br>
                        <%= "$#{i.product.price}" %>
                    </h4>
                    </a>
                <% end %>
            <h6 class="backwards"> <%= link_to "Place Order", order_path%> </h6>
            <h6 class="backwards"> <%= link_to "Back to Cart", cart_path%> </h6>
        </div>
    <% end %>

    <%# If not logged in %>
    <% unless current_user %>
        <h1> <%= link_to "Please Login to View", '/'%> </h1>
    <% end %>
</div>