<h1 class="store-front"> Shop Rails! </h1>

<div>
    <%# If logged in %>
    <% if current_user%>
        <div class="categories">
            <h1>Your Cart</h1>
            <% @items.each do |i| %>
                <a id="category" class="list-group-item list-group-item-action"> <h4 id="product"> <%= i.product.name %> (<%= i.quanity%>) </h4> </a>
            <% end %>
            <h6 class="backwards"> <%= link_to "Back to Categories", '/categories'%> </h6>
        </div>
    <% end %>

    <%# If not logged in %>
        <% unless current_user %>
            <h1>Please Login to View</h1>
        <% end %>
</div>